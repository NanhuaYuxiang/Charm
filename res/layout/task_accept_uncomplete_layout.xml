<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >

    <!-- 发布任务但未完成的XML布局文件 -->
    <!-- 发布人 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/pub_user"
            android:text="@string/completed_publisher"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publish_publisher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- 任务类型 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/completed_taskType"
            android:drawableLeft="@drawable/sign_icon"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publish_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- 时间 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/completed_taskTime"
            android:drawableLeft="@drawable/clock"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- 地点 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/completed_taskAddress"
            android:drawableLeft="@drawable/current_place"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publish_address"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- 金币 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/completed_taskGold"
            android:drawableLeft="@drawable/money"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publish_gold"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- 状态 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/completed_topsy_turvy"
            android:drawableLeft="@drawable/task_des"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publish_topsy_turvy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>