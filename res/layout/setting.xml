<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.science.strangertofriend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b29ce3"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:minHeight="55dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/scanner_back_img"
            android:contentDescription="@null"
            android:minHeight="55dp"
            android:minWidth="55dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.science.strangertofriend.widget.RevealLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout" >

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- 设置 开始 -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp" >

                    <TextView
                        android:id="@+id/set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:text="@string/set"
                        android:textColor="#999"
                        android:textSize="18sp" />

                    <!-- 账号与安全 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/number_safe"
                                android:layout_width="match_parent"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingLeft="2dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/number_and_safe"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <Switch
                                    android:id="@+id/switch_isOpenFaceVerify"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="10dp" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <!-- 账号绑定 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/number_bound"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/number_bound"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <!-- 消息提醒 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/message_tip"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/message_tip"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <!-- 清除缓存 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/clear_cache"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/clear_cache"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <!-- 清除缓存 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/voice_setting"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/voice_setting"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <!-- 帮助 -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/help"
                        android:textColor="#999"
                        android:textSize="18sp" />
                    <!-- 帮助与反馈 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/set_help"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/help_and_tickling"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <!-- 检查新版本 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/set_update"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/check_new"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/set_version"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/introduce"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/user_deal"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/user_deal"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <!-- 关于我们 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/about_us"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/setting_item"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="15dp"
                                    android:text="@string/about_us"
                                    android:textColor="#555"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center_vertical"
                                    android:paddingRight="20dp"
                                    android:src="@drawable/more_item_right" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </com.science.strangertofriend.widget.RevealLayout>

</RelativeLayout>