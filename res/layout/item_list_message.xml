<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.science.strangertofriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_avater"
        android:layout_width="@dimen/avater_list"
        android:layout_height="@dimen/avater_list"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher"
        app:border_color="#fff"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_avater"
        android:text="@string/username"
        android:textColor="#3e3e39"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_avater"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_avater"
        android:singleLine="true"
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_avater"
        android:textColor="#a6a6a6"
        android:textSize="14sp" />

</RelativeLayout>